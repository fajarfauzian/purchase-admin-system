<%- include('partials/header') %>

<div class="row">
    <div class="col-12">
        <h1 class="mb-4">
            <i class="bi bi-clock-history"></i> Riwayat Pembelian
        </h1>
    </div>
</div>

<% if (typeof success !== 'undefined' && success) { %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle"></i> <%= success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
<% } %>

<% if (typeof error !== 'undefined' && error) { %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle"></i> <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
<% } %>

<div class="card">
    <div class="card-header bg-light d-flex justify-content-between align-items-center">
        <h5 class="mb-0">
            <i class="bi bi-list-ul"></i> Daftar Semua Pembelian
        </h5>
        <a href="/admin/add-purchase" class="btn btn-primary btn-sm">
            <i class="bi bi-plus-circle"></i> Tambah Pembelian
        </a>
    </div>
    <div class="card-body">
        <% if (purchases && purchases.length > 0) { %>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Produk</th>
                            <th>Qty</th>
                            <th>Total Harga</th>
                            <th>Status</th>
                            <th>Tanggal</th>
                            <th>Aksi</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% purchases.forEach(purchase => { %>
                            <tr>
                                <td>#<%= purchase.id %></td>
                                <td><%= purchase.produk %></td>
                                <td><%= purchase.qty %></td>
                                <td class="fw-bold">Rp <%= purchase.total.toLocaleString('id-ID') %></td>
                                <td>
                                    <% if (purchase.status === 'aktif') { %>
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle"></i> Aktif
                                        </span>
                                    <% } else { %>
                                        <span class="badge bg-danger">
                                            <i class="bi bi-x-circle"></i> Batal
                                        </span>
                                    <% } %>
                                </td>
                                <td><%= new Date(purchase.tanggal).toLocaleString('id-ID') %></td>
                                <td>
                                    <% if (purchase.status === 'aktif') { %>
                                        <form method="POST" action="/admin/cancel-purchase/<%= purchase.id %>" style="display: inline;">
                                            <button type="submit" class="btn btn-danger btn-sm btn-cancel-purchase">
                                                <i class="bi bi-x-circle"></i> Batalkan
                                            </button>
                                        </form>
                                    <% } else { %>
                                        <button class="btn btn-secondary btn-sm" disabled>
                                            <i class="bi bi-ban"></i> Dibatalkan
                                        </button>
                                    <% } %>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>

            <div class="mt-3">
                <div class="row">
                    <div class="col-md-6">
                        <p class="text-muted">
                            <i class="bi bi-info-circle"></i> 
                            Total: <strong><%= purchases.length %></strong> transaksi
                        </p>
                    </div>
                    <div class="col-md-6 text-end">
                        <div class="btn-group" role="group">
                            <button type="button" class="btn btn-outline-success btn-sm">
                                <i class="bi bi-check-circle"></i> 
                                Aktif: <%= purchases.filter(p => p.status === 'aktif').length %>
                            </button>
                            <button type="button" class="btn btn-outline-danger btn-sm">
                                <i class="bi bi-x-circle"></i> 
                                Batal: <%= purchases.filter(p => p.status === 'batal').length %>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        <% } else { %>
            <div class="text-center py-5 text-muted">
                <i class="bi bi-inbox fs-1"></i>
                <p class="mt-3">Belum ada riwayat pembelian</p>
                <a href="/admin/add-purchase" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Buat Pembelian Pertama
                </a>
            </div>
        <% } %>
    </div>
</div>

<%- include('partials/footer') %>