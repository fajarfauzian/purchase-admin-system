<% const currentPage = 'purchases'; %>
<%- include('partials/sidebar') %>

<div class="page-sidebar">
    <h1>
        <i class="bi bi-clock-history"></i>
        Riwayat Pembelian
    </h1>
</div>

<% if (typeof success !== 'undefined' && success) { %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle"></i>
        <div>
            <strong>Berhasil!</strong><br>
            <%= success %>
        </div>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
<% } %>

<% if (typeof error !== 'undefined' && error) { %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle"></i>
        <div>
            <strong>Error!</strong><br>
            <%= error %>
        </div>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
<% } %>

<div class="card">
    <div class="card-sidebar d-flex justify-content-between align-items-center flex-wrap gap-3">
        <h5 class="mb-0">
            <i class="bi bi-list-ul"></i>
            Semua Transaksi Pembelian
        </h5>
        <a href="/admin/add-purchase" class="btn btn-light btn-sm">
            <i class="bi bi-plus-circle"></i>
            Tambah Pembelian
        </a>
    </div>
    <div class="card-body">
        <% if (purchases && purchases.length > 0) { %>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Produk</th>
                            <th>Qty</th>
                            <th>Total Harga</th>
                            <th>Status</th>
                            <th>Tanggal</th>
                            <th>Aksi</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% purchases.forEach(purchase => { %>
                            <tr>
                                <td><strong>#<%= purchase.id %></strong></td>
                                <td><strong><%= purchase.produk %></strong></td>
                                <td>
                                    <span class="badge bg-info">
                                        <i class="bi bi-box"></i>
                                        <%= purchase.qty %>
                                    </span>
                                </td>
                                <td class="fw-bold text-primary">Rp <%= purchase.total.toLocaleString('id-ID') %></td>
                                <td>
                                    <% if (purchase.status === 'aktif') { %>
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle"></i> Aktif
                                        </span>
                                    <% } else { %>
                                        <span class="badge bg-danger">
                                            <i class="bi bi-x-circle"></i> Batal
                                        </span>
                                    <% } %>
                                </td>
                                <td>
                                    <small class="text-muted">
                                        <i class="bi bi-calendar"></i>
                                        <%= new Date(purchase.tanggal).toLocaleString('id-ID', { 
                                            day: '2-digit', 
                                            month: 'short', 
                                            year: 'numeric',
                                            hour: '2-digit',
                                            minute: '2-digit'
                                        }) %>
                                    </small>
                                </td>
                                <td>
                                    <% if (purchase.status === 'aktif') { %>
                                        <form method="POST" action="/admin/cancel-purchase/<%= purchase.id %>" style="display: inline;">
                                            <button type="submit" class="btn btn-danger btn-sm btn-cancel-purchase">
                                                <i class="bi bi-x-circle"></i>
                                                Batalkan
                                            </button>
                                        </form>
                                    <% } else { %>
                                        <button class="btn btn-secondary btn-sm" disabled>
                                            <i class="bi bi-ban"></i>
                                            Dibatalkan
                                        </button>
                                    <% } %>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>

            <div class="mt-4">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <p class="text-muted mb-0">
                            <i class="bi bi-info-circle"></i> 
                            Menampilkan <strong><%= purchases.length %></strong> transaksi
                        </p>
                    </div>
                    <div class="col-md-6 text-end">
                        <div class="d-inline-flex gap-2">
                            <div class="badge bg-success" style="padding: 10px 16px;">
                                <i class="bi bi-check-circle"></i> 
                                Aktif: <strong><%= purchases.filter(p => p.status === 'aktif').length %></strong>
                            </div>
                            <div class="badge bg-danger" style="padding: 10px 16px;">
                                <i class="bi bi-x-circle"></i> 
                                Batal: <strong><%= purchases.filter(p => p.status === 'batal').length %></strong>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row g-3 mt-4">
                <div class="col-md-4">
                    <div class="card" style="background: linear-gradient(135deg, #10b981 0%, #059669 100%); color: white; border: none;">
                        <div class="card-body">
                            <h6 class="opacity-90 mb-2">Total Transaksi Aktif</h6>
                            <h3 class="mb-0 fw-bold">
                                <%= purchases.filter(p => p.status === 'aktif').length %>
                            </h3>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card" style="background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%); color: white; border: none;">
                        <div class="card-body">
                            <h6 class="opacity-90 mb-2">Total Transaksi Batal</h6>
                            <h3 class="mb-0 fw-bold">
                                <%= purchases.filter(p => p.status === 'batal').length %>
                            </h3>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; border: none;">
                        <div class="card-body">
                            <h6 class="opacity-90 mb-2">Total Nilai Aktif</h6>
                            <h3 class="mb-0 fw-bold">
                                Rp <%= purchases
                                    .filter(p => p.status === 'aktif')
                                    .reduce((sum, p) => sum + parseFloat(p.total), 0)
                                    .toLocaleString('id-ID') %>
                            </h3>
                        </div>
                    </div>
                </div>
            </div>
        <% } else { %>
            <div class="text-center py-5">
                <i class="bi bi-inbox fs-1"></i>
                <p class="mt-3 text-muted">Belum ada riwayat pembelian</p>
                <a href="/admin/add-purchase" class="btn btn-primary mt-3">
                    <i class="bi bi-plus-circle"></i>
                    Buat Pembelian Pertama
                </a>
            </div>
        <% } %>
    </div>
</div>

<%- include('partials/footer') %>