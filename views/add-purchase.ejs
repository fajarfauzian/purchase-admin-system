<% const currentPage = 'add-purchase'; %>
<%- include('partials/sidebar') %>

<div class="page-sidebar">
    <h1>
        <i class="bi bi-plus-circle"></i>
        Tambah Pembelian Baru
    </h1>
</div>

<% if (typeof success !== 'undefined' && success) { %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle"></i>
        <div>
            <strong>Berhasil!</strong><br>
            <%= success %>
        </div>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
<% } %>

<% if (typeof error !== 'undefined' && error) { %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle"></i>
        <div>
            <strong>Error!</strong><br>
            <%= error %>
        </div>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
<% } %>

<div class="row g-4">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-sidebar">
                <h5>
                    <i class="bi bi-cart-plus"></i>
                    Form Pembelian
                </h5>
            </div>
            <div class="card-body">
                <form method="POST" action="/admin/add-purchase" id="purchaseForm">
                    <div class="mb-4">
                        <label for="produk_id" class="form-label">
                            <i class="bi bi-box-seam"></i>
                            Pilih Produk *
                        </label>
                        <select class="form-select" id="produk_id" name="produk_id" required>
                            <option value="">-- Pilih Produk --</option>
                            <% if (products && products.length > 0) { %>
                                <% products.forEach(product => { %>
                                    <option 
                                        value="<%= product.id %>" 
                                        data-harga="<%= product.harga %>"
                                        data-stok="<%= product.stok || 0 %>">
                                        <%= product.nama %> - Rp <%= product.harga.toLocaleString('id-ID') %> 
                                        (Stok: <%= product.stok || 0 %>)
                                    </option>
                                <% }); %>
                            <% } %>
                        </select>
                    </div>

                    <div class="mb-4">
                        <label for="qty" class="form-label">
                            <i class="bi bi-123"></i>
                            Jumlah (Qty) *
                        </label>
                        <input 
                            type="number" 
                            class="form-control" 
                            id="qty" 
                            name="qty" 
                            min="1" 
                            value="1"
                            required>
                        <div class="form-text">
                            <i class="bi bi-info-circle"></i> 
                            Stok tersedia: <span id="stok-info" class="fw-bold">-</span>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label class="form-label">
                            <i class="bi bi-cash"></i>
                            Total Harga
                        </label>
                        <div class="input-group">
                            <span class="input-group-text">Rp</span>
                            <input 
                                type="text" 
                                class="form-control" 
                                id="total" 
                                readonly 
                                value="0"
                                style="font-weight: 700; font-size: 1.1rem;">
                        </div>
                        <div class="form-text">
                            <i class="bi bi-calculator"></i> 
                            Total dihitung otomatis: <strong>Harga × Qty</strong>
                        </div>
                    </div>

                    <hr class="my-4">

                    <div class="d-flex gap-3">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i>
                            Simpan Pembelian
                        </button>
                        <a href="/admin/purchases" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i>
                            Batal
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
            <div class="card-body">
                <h5 class="card-title mb-4">
                    <i class="bi bi-lightbulb"></i>
                    Panduan Penggunaan
                </h5>
                <div class="d-flex flex-column gap-3">
                    <div class="d-flex align-items-start gap-3">
                        <div class="bg-white bg-opacity-25 rounded-circle p-2" style="min-width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
                            <strong>1</strong>
                        </div>
                        <div>
                            <strong>Pilih Produk</strong>
                            <p class="mb-0 small opacity-90">Pilih produk yang ingin dibeli dari dropdown</p>
                        </div>
                    </div>
                    <div class="d-flex align-items-start gap-3">
                        <div class="bg-white bg-opacity-25 rounded-circle p-2" style="min-width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
                            <strong>2</strong>
                        </div>
                        <div>
                            <strong>Input Jumlah</strong>
                            <p class="mb-0 small opacity-90">Masukkan jumlah yang ingin dibeli</p>
                        </div>
                    </div>
                    <div class="d-flex align-items-start gap-3">
                        <div class="bg-white bg-opacity-25 rounded-circle p-2" style="min-width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
                            <strong>3</strong>
                        </div>
                        <div>
                            <strong>Cek Total</strong>
                            <p class="mb-0 small opacity-90">Total harga akan dihitung otomatis</p>
                        </div>
                    </div>
                    <div class="d-flex align-items-start gap-3">
                        <div class="bg-white bg-opacity-25 rounded-circle p-2" style="min-width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
                            <strong>4</strong>
                        </div>
                        <div>
                            <strong>Simpan</strong>
                            <p class="mb-0 small opacity-90">Klik tombol simpan untuk menyimpan pembelian</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card mt-4">
            <div class="card-body">
                <h6 class="fw-bold mb-3">
                    <i class="bi bi-info-circle text-primary"></i>
                    Informasi Penting
                </h6>
                <ul class="small mb-0 ps-3">
                    <li class="mb-2">Pastikan stok produk mencukupi sebelum membuat pembelian</li>
                    <li class="mb-2">Total harga dihitung berdasarkan: <strong>Harga × Qty</strong></li>
                    <li class="mb-2">Status pembelian otomatis menjadi <strong>"Aktif"</strong></li>
                    <li class="mb-0">Pembelian dapat dibatalkan dari halaman riwayat</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>

<script>
    const produkSelect = document.getElementById('produk_id');
    const qtyInput = document.getElementById('qty');
    const totalInput = document.getElementById('total');
    const stokInfo = document.getElementById('stok-info');

    function hitungTotal() {
        const selectedOption = produkSelect.options[produkSelect.selectedIndex];
        if (selectedOption.value) {
            const harga = parseFloat(selectedOption.dataset.harga);
            const stok = parseInt(selectedOption.dataset.stok);
            const qty = parseInt(qtyInput.value) || 0;
            
            stokInfo.textContent = stok + ' unit';
            stokInfo.className = 'fw-bold text-success';
            
            if (qty > stok) {
                stokInfo.innerHTML = '<span class="text-danger">' + stok + ' unit (Qty melebihi stok!)</span>';
            }
            
            const total = harga * qty;
            totalInput.value = total.toLocaleString('id-ID');
        } else {
            totalInput.value = '0';
            stokInfo.textContent = '-';
            stokInfo.className = 'fw-bold';
        }
    }

    produkSelect.addEventListener('change', hitungTotal);
    qtyInput.addEventListener('input', hitungTotal);

    document.getElementById('purchaseForm').addEventListener('submit', function(e) {
        const selectedOption = produkSelect.options[produkSelect.selectedIndex];
        if (selectedOption.value) {
            const stok = parseInt(selectedOption.dataset.stok);
            const qty = parseInt(qtyInput.value) || 0;
            
            if (qty > stok) {
                e.preventDefault();
                alert('Jumlah pembelian melebihi stok yang tersedia!');
                return false;
            }
        }
    });
</script>