<% const currentPage = 'dashboard'; %>
<%- include('partials/sidebar') %>

<div class="page-sidebar">
    <h1>
        <i class="bi bi-speedometer2"></i>
        Dashboard
    </h1>
</div>

<div class="row g-4 mb-4">
    <div class="col-md-6 col-lg-3">
        <div class="stat-card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-subtitle mb-2">Total Produk</h6>
                        <h2 class="card-title mb-0"><%= stats.totalProduk || 0 %></h2>
                    </div>
                    <i class="bi bi-box-seam"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-lg-3">
        <div class="stat-card bg-success">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-subtitle mb-2">Total Stok</h6>
                        <h2 class="card-title mb-0"><%= stats.totalStok || 0 %></h2>
                    </div>
                    <i class="bi bi-archive"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-lg-3">
        <div class="stat-card bg-info">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-subtitle mb-2">Pembelian Aktif</h6>
                        <h2 class="card-title mb-0"><%= stats.totalPembelianAktif || 0 %></h2>
                    </div>
                    <i class="bi bi-cart-check"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-lg-3">
        <div class="stat-card bg-warning">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-subtitle mb-2">Pembelian Batal</h6>
                        <h2 class="card-title mb-0"><%= stats.totalPembelianBatal || 0 %></h2>
                    </div>
                    <i class="bi bi-x-circle"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row g-4 mb-4">
    <div class="col-12">
        <div class="stat-card bg-secondary">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-subtitle mb-2">Total Nilai Pembelian Aktif</h6>
                        <h2 class="card-title mb-0">
                            Rp <%= (stats.totalNilaiPembelian || 0).toLocaleString('id-ID') %>
                        </h2>
                    </div>
                    <i class="bi bi-cash-stack"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-sidebar">
                <h5>
                    <i class="bi bi-clock-history"></i>
                    Pembelian Terbaru
                </h5>
            </div>
            <div class="card-body">
                <% if (recentPurchases && recentPurchases.length > 0) { %>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Produk</th>
                                    <th>Qty</th>
                                    <th>Total</th>
                                    <th>Status</th>
                                    <th>Tanggal</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% recentPurchases.forEach(purchase => { %>
                                    <tr>
                                        <td><strong>#<%= purchase.id %></strong></td>
                                        <td><%= purchase.produk %></td>
                                        <td><%= purchase.qty %></td>
                                        <td><strong>Rp <%= purchase.total.toLocaleString('id-ID') %></strong></td>
                                        <td>
                                            <% if (purchase.status === 'aktif') { %>
                                                <span class="badge bg-success">
                                                    <i class="bi bi-check-circle"></i> Aktif
                                                </span>
                                            <% } else { %>
                                                <span class="badge bg-danger">
                                                    <i class="bi bi-x-circle"></i> Batal
                                                </span>
                                            <% } %>
                                        </td>
                                        <td><%= new Date(purchase.tanggal).toLocaleString('id-ID') %></td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                    <div class="text-center mt-4">
                        <a href="/admin/purchases" class="btn btn-primary">
                            Lihat Semua Riwayat
                            <i class="bi bi-arrow-right"></i>
                        </a>
                    </div>
                <% } else { %>
                    <div class="text-center py-5">
                        <i class="bi bi-inbox fs-1"></i>
                        <p class="mt-3 text-muted">Belum ada data pembelian</p>
                        <a href="/admin/add-purchase" class="btn btn-primary mt-3">
                            <i class="bi bi-plus-circle"></i>
                            Buat Pembelian Pertama
                        </a>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>