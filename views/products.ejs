<%- include('partials/header') %>

<div class="row">
    <div class="col-12">
        <h1 class="mb-4">
            <i class="bi bi-box-seam"></i> Daftar Produk & Stok
        </h1>
    </div>
</div>

<% if (typeof error !== 'undefined' && error) { %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle"></i> <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
<% } %>

<div class="card">
    <div class="card-body">
        <% if (products && products.length > 0) { %>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Nama Produk</th>
                            <th>Harga</th>
                            <th>Stok</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% products.forEach(product => { %>
                            <tr>
                                <td>#<%= product.id %></td>
                                <td><%= product.nama %></td>
                                <td class="fw-bold">Rp <%= product.harga.toLocaleString('id-ID') %></td>
                                <td>
                                    <span class="badge bg-info">
                                        <%= product.stok || 0 %> unit
                                    </span>
                                </td>
                                <td>
                                    <% if (product.stok > 20) { %>
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle"></i> Tersedia
                                        </span>
                                    <% } else if (product.stok > 0) { %>
                                        <span class="badge bg-warning text-dark">
                                            <i class="bi bi-exclamation-triangle"></i> Stok Terbatas
                                        </span>
                                    <% } else { %>
                                        <span class="badge bg-danger">
                                            <i class="bi bi-x-circle"></i> Habis
                                        </span>
                                    <% } %>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>

            <div class="mt-3">
                <div class="row">
                    <div class="col-md-6">
                        <p class="text-muted">
                            <i class="bi bi-info-circle"></i> 
                            Total: <strong><%= products.length %></strong> produk
                        </p>
                    </div>
                    <div class="col-md-6 text-end">
                        <a href="/admin/add-purchase" class="btn btn-primary">
                            <i class="bi bi-plus-circle"></i> Buat Pembelian Baru
                        </a>
                    </div>
                </div>
            </div>
        <% } else { %>
            <div class="text-center py-5 text-muted">
                <i class="bi bi-inbox fs-1"></i>
                <p class="mt-3">Belum ada data produk</p>
            </div>
        <% } %>
    </div>
</div>

<%- include('partials/footer') %>